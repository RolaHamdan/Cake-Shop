@model Cake_Shop.Models.Products

@{
}


<div class="container mt-4" style="direction: rtl;">
    <div class="row">
        <div class="col-md-6">
            <!-- صورة المنتج -->
            <img src="/images/@Model.Image" alt="@Model.Name" class="img-fluid rounded" style="object-fit: cover; width: 100%; height: 400px;">
        </div>
        <div class="col-md-6">
            <!-- تفاصيل المنتج -->
            <h2 class="mb-3"> @Model.Name</h2>
            <p><strong>الوصف:</strong> @Model.Description</p>
          
            <p><strong>الفئة:</strong> @Model.Category</p>
            <p><strong>السعر:</strong> @Model.Price ريال</p>

            <!-- أزرار لإجراء عمليات إضافية -->
            <div class="mt-20">
                <a href="/Home/Products" class="btn btn-secondary">العودة إلى المنتجات</a>
                <button class="btn btn-primary">إضافة إلى السلة</button>
            </div>
        </div>
    </div>
</div>  


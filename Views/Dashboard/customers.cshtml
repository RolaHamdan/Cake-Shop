@model IEnumerable<Customers>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container">
    <div class="row mt-5">
        <div class="col">
            <div class="card mt-5">
                <div class="card-body">
                    <form asp-action="CreateNewCustomers" method="post">
                        <div class="row">
                            <div class="col">
                                <label class="from-label "> اسم العميل </label>
                                <input type="text" name="Name" class="from-control" />

                            </div>

                            <div class="col">
                                <label class="from-label "> ايميل العميل </label>
                                <input type="text" name="Email" class="from-control" />

                            </div>

                          


                        </div>

                        <div class="row">


                            <div class="col">
                                <label class="from-label "> رقم الجوال </label>
                                <input type="text" name="Phone" class="from-control" />

                            </div>

                            <div class="col">
                                <label class="from-label "> عنوان العميل  </label>
                                <input type="text" name="Address" class="from-control" />

                            </div>
                            </div>

                        <div class="row mt-3">
                            <div class="col text-center">
                                <button type="submit" class="btn-hover color-1">حفظ </button>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>



    <div class="row mt-5">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <table class="table text-center">
                        <thead>
                            <tt>
                                <td>id  </td>
                                <td>اسم العميل  </td>
                                <td>ايميل العميل  </td>
                                <td>رقم الجوال</td>
                                <td>عنوان العميل</td>
                                <td class="text-center" colspan="2">اجرائ</td>
                            </tt>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.Id</td>
                                    <td> @item.Name</td>
                                    <td> @item.Email</td>
                                    <td> @item.Phone</td>
                                    <td> @item.Address</td>

                                    <td> <a asp-action="DeleteCustomers" asp-route-id="@item.Id"> <i class="fa fa-trash text-danger" aria-hidden="true"></i> </a></td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

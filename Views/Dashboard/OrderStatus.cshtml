@model IEnumerable<OrderStatus>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row mt-5">
        <div class="col">
            <div class="card mt-5">
                <div class="card-body">
                    <form asp-action="CreateNewOrderStatus" method="post">
                        <div class="row">
                            <div class="col">
                                <label class="from-label "> حالة الطلب </label>
                                <input type="text" name="Name" class="from-control" />

                            </div>

                            <div class="row mt-3">
                                <div class="col text-center">
                                    <button type="submit" class="btn-hover color-1">حفظ </button>
                                </div>
                            </div>

                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-5">
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <table class="table text-center">
                        <thead>
                            <tt>

                                <td>رقم </td>
                                <td>حالة الطلب </td>
                            </tt>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.Id</td>
                                    <td> @item.Name</td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>